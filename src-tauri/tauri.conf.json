{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SSH Buddy",
  "version": "0.1.7",
  "identifier": "com.sshbuddy",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "SSH Buddy",
        "hiddenTitle": true,
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFFQzM4NUM5ODZDN0JFNTIKUldSU3ZzZUd5WVhESGhaS091cGw5VmRta1BpWFIvQ29OQy8vOFlxenhyMjU3OTNvWlZsWFpWTysK",
      "endpoints": [
        "https://github.com/runkids/ssh-buddy/releases/latest/download/latest.json"
      ]
    }
  }
}
