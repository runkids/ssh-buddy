{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "SSH Buddy default capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:window:allow-toggle-maximize",
    "fs:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "ssh-keygen", "cmd": "ssh-keygen", "args": true },
        { "name": "ssh", "cmd": "ssh", "args": true },
        { "name": "ssh-keyscan", "cmd": "ssh-keyscan", "args": true },
        { "name": "ssh-add", "cmd": "ssh-add", "args": true },
        { "name": "stat", "cmd": "stat", "args": true },
        { "name": "chmod", "cmd": "chmod", "args": true },
        { "name": "icacls", "cmd": "icacls", "args": true },
        { "name": "whoami", "cmd": "whoami", "args": true }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "$HOME/.ssh" }, { "path": "$HOME/.ssh/**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "$HOME/.ssh/**" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$HOME/.ssh/**" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$HOME/.ssh/**" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$HOME/.ssh/**" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/.ssh" },
        { "path": "$HOME/.ssh/**" },
        { "path": "$APPDATA" },
        { "path": "$APPDATA/**" }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [{ "path": "$HOME/.ssh/**" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "$HOME/.ssh/**" }]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [{ "path": "$HOME/.ssh/**" }]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [{ "path": "$HOME/.ssh/**" }]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [{ "path": "$HOME/.ssh/**" }]
    },
    "os:default",
    "updater:default"
  ]
}
